<h2>Add Comment</h2>
<%= form_for [:catagories ,:subcatagories, @product.comments.build] do |f| %>
<%# <%debugger%> 
  <%= f.hidden_field :user_id, value: current_user.id%>
  <%= f.hidden_field :product_id, value: @product.id%>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
    